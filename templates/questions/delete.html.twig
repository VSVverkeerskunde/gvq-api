{% extends 'admin_base.html.twig' %}

{% block title %}VRAGEN{% endblock %}

{% block content %}

    <p>Ben je zeker dat je vraag met id {{ id }} wil verwijderen?</p>

    <form method="post">
        <div class="form-group">
            <a role="button"
               class="btn btn-secondary"
               href="{{ path('questions_view_index') }}">Annuleren</a>
            <button type="submit"
                    class="btn btn-danger">Verwijderen</button>
        </div>
    </form>

{% endblock %}
