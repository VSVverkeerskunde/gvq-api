{% extends 'admin_base.html.twig' %}

{% block title %}{% trans %}Vragen{% endtrans %}{% endblock %}

{% block content %}

    <p>{% trans %}Ben je zeker dat je vraag met id %id% wil verwijderen?{% endtrans %}</p>

    <form method="post">
        <div class="form-group">
            <a role="button"
               class="btn btn-secondary"
               href="{{ path('questions_view_index') }}">{% trans %}Annuleren{% endtrans %}</a>
            <button type="submit"
                    class="btn btn-danger">{% trans %}Verwijderen{% endtrans %}</button>
        </div>
    </form>

{% endblock %}
