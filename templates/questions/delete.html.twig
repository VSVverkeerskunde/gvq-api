{% extends 'authenticated_base.html.twig' %}

{% block title %}{% trans %}Question.delete.title{% endtrans %}{% endblock %}

{% block content %}

    <h1 class="page-title">{% trans %}Question.delete.title{% endtrans %}</h1>

    <p>{% trans with {'%id%': id} %}Question.delete.confirmation{% endtrans %}</p>

    <form method="post">
        <div class="form-group">
            <a role="button"
               class="btn btn-secondary"
               href="{{ path('questions_view_index') }} ">{% trans %}Button.cancel{% endtrans %}</a>
            <button type="submit"
                    class="btn btn-danger">{% trans %}Question.delete.submit{% endtrans %}</button>
        </div>
    </form>

{% endblock %}
