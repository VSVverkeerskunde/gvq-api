{% extends 'admin_base.html.twig' %}

{% block title %}VRAGEN{% endblock %}

{% block content %}

    <form action="{{ path('questions_add') }}"
          method="post"
          enctype="multipart/form-data">

        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label for="language">Taal</label>
                    <select id="language"
                            name="language"
                            class="form-control">
                        <option>nl</option>
                        <option>fr</option>
                    </select>
                </div>

                <div class="col-sm-3">
                    <label for="year">Jaar</label>
                    <input id="year"
                           name="year"
                           type="text"
                           class="form-control">
                </div>

                <div class="col-sm-6">
                    <label for="category">Thema</label>
                    <select id="category"
                            name="category"
                            class="form-control">
                        {% for category in categories %}
                            <option value="{{ category.id.toString }}">
                                {{ category.name.toNative }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="photo">Foto</label>
            <input id="photo"
                   name="photo"
                   type="file"
                   class="form-control-file">
        </div>

        <div class="form-group">
            <label for="text">Vraag</label>
            <textarea id="text"
                      name="text"
                      class="form-control"></textarea>
        </div>

        {% for index in 1..3 %}
            <div class="form-group">
                <div class="form-check">
                    <input id="{{ "correct#{index}" }}"
                           name="correct"
                           type="radio"
                           class="form-check-input"
                           value="{{ "correct#{index}" }}">
                    <label class="form-check-label" for="{{ "correct#{index}" }}">
                        {{ "Antwoord #{index} is correct" }}
                    </label>
                </div>
                <textarea id="{{ "answer#{index}" }}"
                          name="{{ "answer#{index}" }}"
                          class="form-control"></textarea>
            </div>
        {% endfor %}

        <div class="form-group">
            <label for="feedback">Feedback</label>
            <textarea id="feedback"
                      name="feedback"
                      class="form-control"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Bewaar</button>
        </div>

    </form>

{% endblock %}
