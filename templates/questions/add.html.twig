{% extends 'admin_base.html.twig' %}

{% block title %}VRAGEN{% endblock %}

{% block content %}

    {{ form_start(form) }}
        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label for="question_form_language">Taal</label>
                    {{ form_widget(form.language) }}
                </div>

                <div class="col-sm-3">
                    <label for="question_form_year">Jaar</label>
                    {{ form_widget(form.year) }}
                    {{ form_errors(form.year) }}
                </div>

                <div class="col-sm-6">
                    <label for="question_form_category">Thema</label>
                    {{ form_widget(form.category) }}
                </div>
            </div>
        </div>

        {% if form.image is defined %}
            <div class="form-group">
                <label for="question_form_image">Foto</label>
                {{ form_widget(form.image, {'attr': {'style': 'opacity: 1'}}) }}
            </div>
        {% endif %}

        <div class="form-group">
            <label for="question_form_text">Vraag</label>
            {{ form_widget(form.text) }}
            {{ form_errors(form.text) }}
        </div>

        <div class="form-group">
            <label for="question_form_answer1">Antwoord 1</label>
            {{ form_widget(form.answer1) }}
            {{ form_errors(form.answer1) }}
        </div>

        <div class="form-group">
            <label for="question_form_answer2">Antwoord 2</label>
            {{ form_widget(form.answer2) }}
            {{ form_errors(form.answer2) }}
        </div>

        <div class="form-group">
            <label for="question_form_answer3">Antwoord 3</label>
            {{ form_widget(form.answer3) }}
            {{ form_errors(form.answer3) }}
        </div>

        <div class="form-group">
            <label for="question_form_feedback">Feedback</label>
            {{ form_widget(form.feedback) }}
            {{ form_errors(form.feedback) }}
        </div>

        <div class="form-group">
            <label for="question_form_correctAnswer">Het correcte antwoord is</label>
            {{ form_widget(form.correctAnswer) }}
        </div>

        <div class="form-group">
            <a role="button"
               class="btn btn-secondary"
               href="{{ path('questions_view_index') }}">
                Annuleren
            </a>
            <button type="submit" class="btn btn-primary">Bewaar</button>
        </div>
    {{ form_end(form) }}

{% endblock %}
