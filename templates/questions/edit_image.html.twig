{% extends 'authenticated_base.html.twig' %}

{% block title %}{% trans %}Question.edit.image.title{% endtrans %}{% endblock %}

{% block content %}

    <h1 class="page-title">{% trans %}Question.edit.image.title{% endtrans %}</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="form-group">
        <label for="question_form_image">{% trans %}Image{% endtrans %}</label>
        {{ form_widget(form.image, {'attr': {'style': 'opacity: 1'}}) }}
        {{ form_errors(form.image) }}
    </div>

    <div class="form-group">
        <a role="button"
           class="btn btn-secondary"
           href="{{ path('questions_view_index') }}">{% trans %}Button.cancel{% endtrans %}
        </a>
        <button type="submit" class="btn btn-primary">{% trans %}Question.edit.image.submit{% endtrans %}</button>
    </div>

    {{ form_end(form) }}

{% endblock %}
