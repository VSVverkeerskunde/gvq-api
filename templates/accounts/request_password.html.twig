{% extends 'base.html.twig' %}

{% block title %}{% trans %}Wachtwoord herstellen{% endtrans %}{% endblock %}

{% block content %}

    <div class="card">
        <div class="card-header">
            <div class="card-title">{% trans %} Wachtwoord herstellen {% endtrans %}</div>
        </div>

        <div class="card-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                <label for="form_email">{% trans %}E-mail{% endtrans %}</label>
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">{% trans %}Password-reset.request.submit{% endtrans %}</button>
            </div>
            {{ form_end(form) }}
        </div>

        <div class="card-footer">
            <div class="card-subtitle">{% trans %}Wachtwoord herstel uitleg{% endtrans %}</div>
        </div>
    </div>

{% endblock %}
