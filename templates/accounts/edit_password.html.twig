{% extends 'authenticated_base.html.twig' %}

{% block title %}{% trans %}Password.edit.title{% endtrans %}{% endblock %}

{% block content %}

    <h1 class="page-title">{% trans %}Password.edit.title{% endtrans %}</h1>

    {% include '/includes/flash.html.twig' %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate','class': 'form-register'}}) }}
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6">
                <label for="form_oldPassword">{% trans %}Password.old{% endtrans %}</label>
                {{ form_widget(form.oldPassword) }}
                {{ form_errors(form.oldPassword) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-sm-6">
                <label for="form_password_first">{% trans %}Password.new{% endtrans %}</label>
                {{ form_widget(form.password.first) }}
                {{ form_errors(form.password.first) }}
                {# Don't show password hint in case of password syntax error #}
                {% if (form.password.first.vars.errors|length == 0) or
                    (form.password.first.vars.errors[0].message|length < 80) %}
                    <small id="form_password_help" class="form-text text-muted">{% trans %}
                            Field.password.pattern{% endtrans %}</small>
                {% endif %}
            </div>
            <div class="col-sm-6">
                <label for="form_password_second">{% trans %}Password.new.confirm{% endtrans %}</label>
                {{ form_widget(form.password.second) }}
                {{ form_errors(form.password.second) }}
            </div>
        </div>
    </div>


    <div class="form-group">
        <h5 class="form-text text-muted">{% trans %}Password.edit.warning{% endtrans %}</h5>
        <button type="submit" class="btn btn-primary">{% trans %}Button.edit{% endtrans %}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
