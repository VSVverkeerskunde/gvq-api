{% extends 'base.html.twig' %}

{% block title %}{% trans %}Herstel wachtwoord{% endtrans %}{% endblock %}

{% block content %}

    <div class="card">
        <div class="card-header">
            <div class="card-title">{% trans %}Herstel wachtwoord{% endtrans %}</div>
        </div>

        <div class="card-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                <label for="form_password_first">{% trans %}Wachtwoord{% endtrans %}</label>
                {{ form_widget(form.password.first) }}
                {{ form_errors(form.password.first) }}
                {# Don't show password hint in case of password syntax error #}
                {% if (form.password.first.vars.errors|length == 0) or
                    (form.password.first.vars.errors[0].message|length < 80) %}
                    <small id="form_password_help"
                           class="form-text text-muted">{% trans %}Invalid password pattern{% endtrans %}</small>
                {% endif %}
                <label for="form_password_second">{% trans %}Bevestig wachtwoord{% endtrans %}</label>
                {{ form_widget(form.password.second) }}
                {{ form_errors(form.password.second) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">{% trans %}Herstel wachtwoord{% endtrans %}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
