{% extends 'anonymous_base.html.twig' %}

{% block title %}{% trans %}Password.reset.title{% endtrans %}{% endblock %}

{% block content %}

    <div class="card">
        <div class="card-header">
            <div class="card-title">{% trans %}Password.reset.title{% endtrans %}</div>
        </div>

        <div class="card-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                <label for="form_password_first">{% trans %}Password{% endtrans %}</label>
                {{ form_widget(form.password.first) }}
                {{ form_errors(form.password.first) }}
                {# Don't show password hint in case of password syntax error #}
                {% if (form.password.first.vars.errors|length == 0) or
                    (form.password.first.vars.errors[0].message|length < 80) %}
                    <small id="form_password_help"
                           class="form-text text-muted">{% trans %}Password.error.pattern{% endtrans %}</small>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="form_password_second">{% trans %}Password.confirm{% endtrans %}</label>
                {{ form_widget(form.password.second) }}
                {{ form_errors(form.password.second) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">{% trans %}Password.reset.submit{% endtrans %}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
