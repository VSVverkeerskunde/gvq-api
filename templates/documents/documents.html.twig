{% extends 'authenticated_base.html.twig' %}

{% block title %}{% trans %}Documents{% endtrans %}{% endblock %}

{% block content %}

    <h1 class="page-title">{% trans %}Documents{% endtrans %}</h1>

    {% include '/includes/flash.html.twig' %}

    {% if app.request.locale == 'nl' %}
    <h3>{% trans %}Documents.title.nl{% endtrans %}</h3>
    <ul>
        {% for file in dutchFiles %}
            <li>
                <a target="_blank" href="/documents/{{ app.request.locale }}/{{ file.relativePathName }}">{{ file.relativePathName }}</a>
            </li>
        {% endfor %}
    </ul>
    {% endif %}
    <h3>{% trans %}Documents.title.fr{% endtrans %}</h3>
    <ul>
        {% for file in frenchFiles %}
            <li>
                <a target="_blank" href="/documents/{{ app.request.locale }}/{{ file.relativePathName }}">{{ file.relativePathName }}</a>
            </li>
        {% endfor %}
    </ul>
    {% if app.request.locale == 'fr' %}
        <h3>{% trans %}Documents.title.nl{% endtrans %}</h3>
        <ul>
            {% for file in dutchFiles %}
                <li>
                    <a target="_blank" href="/documents/{{ app.request.locale }}/{{ file.relativePathName }}">{{ file.relativePathName }}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
