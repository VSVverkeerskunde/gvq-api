{% extends 'authenticated_base.html.twig' %}

{% block title %}{% trans %}Dashboard{% endtrans %}{% endblock %}

{% block content %}

    <h1 class="page-title">{% trans %}Dashboard{% endtrans %}</h1>

    {% include '/includes/flash.html.twig' %}

    <h1>{{ activeCompany.name.toNative }}</h1>

    {% if companies|length > 1 %}
        <div class="form-group form-inline">
            <select class="form-control" id="company">
                {% for company in companies %}
                    <option value="{{ company.id.toString }}" {% if activeCompany.id.equals(company.id) %}selected="selected"{% endif %}>{{ company.name.toNative }}</option>
                {% endfor %}
            </select>
            <a role="button"
               id="apply"
               class="btn btn-primary ml-3"
               href="{{ path('dashboard', {'companyId': activeCompany.id.toString}) }}" >
                {% trans %}Button.apply{% endtrans %}
            </a>
        </div>
    {% endif %}

    <p>{% trans %}Dashboard.welcome{% endtrans %}</p>

    <div class="row">
        <div class="col-4">
            <div class="card text-center">
                <div class="card-header">
                    <div class="card-title">{% trans %}Dashboard.ratio.title{% endtrans %}</div>
                </div>
                <div class="card-body">
                    <h2>{{ employeeParticipationRatio.participationCount.toNative }} / {{ employeeParticipationRatio.totalEmployees.toNative }}</h2>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card text-center">
                <div class="card-header">
                    <div class="card-title">{% trans %}Dashboard.average.title{% endtrans %}</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 border-right">
                            <h3>{{ activeCompany.name.toNative }}</h3>
                            <h2>{{ companyAverage.toNative }}</h2>
                        </div>
                        <div class="col-6">
                            <h3>{% trans %}Dashboard.average.all{% endtrans %}</h3>
                            <h2>{{ average.toNative }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if topScores|length > 0 %}

    <table class="table table-non-fluid table-bordered">
        <thead class="thead-dark thead-primary text-center">
            <tr>
                <th scope="col" colspan="3" class="border-right border-bottom">{% trans %}Top.scores{% endtrans %}</th>
            </tr>
            <tr>
                <th scope="col" class="border-right border-bottom">{% trans %}Rank{% endtrans %}</th>
                <th scope="col" class="border-right border-bottom">{% trans %}Email{% endtrans %}</th>
                <th scope="col" class="border-right border-bottom">{% trans %}Score{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for topScore in topScores  %}
                <tr>
                    <td class="text-right">{{ loop.index }}</td>
                    <td>{{ topScore.email.toNative }}</td>
                    <td class="text-right">{{ topScore.score.toNative }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a role="button"
       class="btn btn-primary"
       href="{{ path('dashboard_export_topscores', {'companyId': activeCompany.id.toString}) }}" ><span class="oi oi-data-transfer-download"></span>
        {% trans %}Button.export{% endtrans %}
    </a>

    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#company').change(function () {
                var url = $("#apply").attr('href').slice(0, -36);
                url = url + $('#company').val();
                $("#apply").prop("href", url);
            });
        });
    </script>
{% endblock %}
