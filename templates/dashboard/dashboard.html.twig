{% extends 'authenticated_base.html.twig' %}

{% block title %}{% trans %}Dashboard{% endtrans %}{% endblock %}

{% block content %}

    <h1 class="page-title">{% trans %}Dashboard{% endtrans %}</h1>

    {% include '/includes/flash.html.twig' %}

    <select class="form-control" id="company">
        {% for company in companies %}
            <option value="{{ company.id.toString }}">{{ company.name.toNative }}</option>
        {% endfor %}
    </select>

    <h1>{{ company.name.toNative }}</h1>

    <p>{% trans %}Dashboard.welcome{% endtrans %}</p>

    <p>Aantal deelnemers / Aantal medewerkers</p>
    <p>{{ employeeParticipationRatio.participationCount.toNative }} / {{ employeeParticipationRatio.totalEmployees.toNative }}</p>

    <p>Gemiddelde bedrijf / Totaal gemiddelde</p>
    <p>{{ companyAverage.toNative }} / {{ average.toNative }}</p>

    <p>Top Scores</p>
    <table class="table table-non-fluid table-bordered small">
        <thead class="thead-dark thead-primary text-center">
            <tr>
                <th scope="col" class="border-right border-bottom">Email</th>
                <th scope="col" class="border-right border-bottom">Score</th>
            </tr>
        </thead>
        <tbody>
            {% for topScore in topScores  %}
                <tr>
                    <td>{{ topScore.email.toNative }}</td>
                    <td class="text-right">{{ topScore.score.toNative }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
