{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/bootstrap-table.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}

    {% if is_granted("ROLE_ADMIN") or is_granted("ROLE_VSV") %}
        {% include '/includes/admin_nav.html.twig' %}
    {% elseif is_granted("ROLE_CONTACT") %}
        {% include '/includes/contact_nav.html.twig' %}
    {% endif %}

    <div class="page-main" id="main">
        <div class="container-fluid">
            {% block content %}{% endblock %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap-table.js') }}"></script>

    {% if app.request.locale == 'fr' %}
        <script src="{{ asset('js/bootstrap-table-fr-BE.js') }}"></script>
    {% endif %}

    {% if app.request.locale == 'nl' %}
        <script src="{{ asset('js/bootstrap-table-nl-NL.js') }}"></script>
    {% endif %}
{% endblock %}
