{% extends 'base.html.twig' %}

{% block body %}
    <a href="#main" class="visually-hidden focusable skip-link">
        {{ 'Skip to main content' | trans }}
    </a>

    {% include '/includes/page-header.html.twig' %}

    <div class="page-main" id="main">
        <div class="container">
            {% include '/includes/flash.html.twig' %}

            {% block content %}{% endblock %}
        </div>
    </div>

    {% if app.request.locale == 'fr' %}
        {% include '/includes/page-footer-fr.html.twig' %}
    {% else %}
        {% include '/includes/page-footer-nl.html.twig' %}
    {% endif %}

{% endblock %}

