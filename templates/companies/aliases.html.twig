                </div>
                {{ form_errors(form.aliasFr) }}
            </div>
        </div>
    {% endif %}
</div>
<small id="form_alias_info" class="form-text text-muted mt-3">{% trans %}Field.alias.info{% endtrans %}</small>
</div>
