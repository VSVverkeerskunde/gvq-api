<div class="form-group">
    {% if app.request.locale == 'fr' %}
        <div class="row">
            <div class="col-sm-12">
                <label for="form_aliasFr">{% trans %}Alias.french{% endtrans %}</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">https://www.quizdelaroute.be/quiz/</span>
                    </div>
                    {{ form_widget(form.aliasFr) }}
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary btn-copy-url" type="button">Copier l'URL</button>
                    </div>
                </div>
                {{ form_errors(form.aliasFr) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <label for="form_aliasNl">{% trans %}Alias.dutch{% endtrans %}</label>
