{% extends 'admin_base.html.twig' %}

{% block title %}{% trans %}Bedrijven{% endtrans %}{% endblock %}

{% block content %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            <div class="row">
                <div class="col-6">
                    <label for="form_email">{% trans %}Naam{% endtrans %}</label>
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="col-6">
                    <label for="form_nrOfEmployees">{% trans %}# Medewerkers{% endtrans %}</label>
                    {{ form_widget(form.nrOfEmployees) }}
                    {{ form_errors(form.nrOfEmployees) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-6">
                    <label for="form_firstName">{% trans %}Alias NL{% endtrans %}</label>
                    {{ form_widget(form.aliasNl) }}
                    {{ form_errors(form.aliasNl) }}
                </div>
                <div class="col-6">
                    <label for="form_lastName">{% trans %}Alias FR{% endtrans %}</label>
                    {{ form_widget(form.aliasFr) }}
                    {{ form_errors(form.aliasFr) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <a role="button"
               class="btn btn-secondary"
               href="{{ path('companies_view_index') }}">{% trans %}Annuleren{% endtrans %}
            </a>
            <button type="submit" class="btn btn-primary">{% trans %}Bewaar{% endtrans %}</button>
        </div>
    {{ form_end(form) }}
{% endblock %}
