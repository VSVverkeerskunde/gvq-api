{% extends 'authenticated_base.html.twig' %}

{% block title %}{% trans %}Company.add.title{% endtrans %}{% endblock %}

{% block content %}
    <h1 class="page-title">{% trans %}Company.add.title{% endtrans %}</h1>

    {% include '/includes/flash.html.twig' %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            <div class="row">
                <div class="col-6">
                    <label for="form_companyName">{% trans %}Company.name{% endtrans %}</label>
                    {{ form_widget(form.companyName) }}
                    {{ form_errors(form.companyName) }}
                </div>
                <div class="col-6">
                    <label for="form_nrOfEmployees">{% trans %}Employees{% endtrans %}</label>
                    {{ form_widget(form.nrOfEmployees) }}
                    {{ form_errors(form.nrOfEmployees) }}
                </div>
            </div>
        </div>

        {% if form.type %}
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12">
                    <label for="form_type">Wij zijn:</label>
                    {{ form_widget(form.type) }}
                    {{ form_errors(form.type) }}
                </div>
            </div>
        </div>
        {% endif %}

        {% include 'companies/aliases.html.twig' %}

        <div class="form-group">
            <a role="button"
               class="btn btn-secondary"
               href="{{ path('companies_view_index') }}">{% trans %}Button.cancel{% endtrans %}
            </a>
            <button type="submit" class="btn btn-primary">{% trans %}Company.add.submit{% endtrans %}</button>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/slugify.js') }}"></script>
    <script src="{{ asset('js/handleAliases.js') }}"></script>
{% endblock %}
