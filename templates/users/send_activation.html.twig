{% extends 'authenticated_base.html.twig' %}

{% block title %}{% trans %}Activation.send.title{% endtrans %}{% endblock %}

{% block content %}

    <h1 class="page-title">{% trans %}Activation.send.title{% endtrans %}</h1>

    <p>{% trans with {'%url%': current_activation_url} %}Activation.send.current_url{% endtrans %}</p>

    <p>{% trans with {'%email%': email} %}Activation.send.confirmation{% endtrans %}</p>

    <form method="post">
        <div class="form-group">
            <a role="button"
               class="btn btn-secondary"
               href="{{ path('users_view_index') }} ">{% trans %}Button.cancel{% endtrans %}</a>
            <button type="submit"
                    class="btn btn-primary">{% trans %}Activation.send.confirm{% endtrans %}</button>
        </div>
    </form>

{% endblock %}
