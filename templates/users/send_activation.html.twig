{% extends 'admin_base.html.twig' %}

{% block title %}{% trans %}Activation.send.title{% endtrans %}{% endblock %}

{% block content %}

    <p>{% trans %}Ben je zeker dat je een activatiemail naar %email% wil sturen?{% endtrans %}</p>

    <form method="post">
        <div class="form-group">
            <a role="button"
               class="btn btn-secondary"
               href="{{ path('users_view_index') }}">{% trans %}Annuleren{% endtrans %}</a>
            <button type="submit"
                    class="btn btn-danger">{% trans %}Activation.send.confirm{% endtrans %}</button>
        </div>
    </form>

{% endblock %}
