{% extends 'admin_base.html.twig' %}

{% block title %}{% trans %}User.add.title{% endtrans %}{% endblock %}

{% block content %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            <label for="form_email">{% trans %}Email{% endtrans %}</label>
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-6">
                    <label for="form_firstName">{% trans %}FirstName{% endtrans %}</label>
                    {{ form_widget(form.firstName) }}
                    {{ form_errors(form.firstName) }}
                </div>
                <div class="col-6">
                    <label for="form_lastName">{% trans %}LastName{% endtrans %}</label>
                    {{ form_widget(form.lastName) }}
                    {{ form_errors(form.lastName) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-6">
                    <label for="form_language">{% trans %}Language{% endtrans %}</label>
                    {{ form_widget(form.language) }}
                </div>
                <div class="col-6">
                    <label for="form_role">{% trans %}Role{% endtrans %}</label>
                    {{ form_widget(form.role) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            {{ form_widget(form.active) }}
        </div>

        <div class="form-group">
            <a role="button"
               class="btn btn-secondary"
               href="{{ path('users_view_index') }}">{% trans %}Button.cancel{% endtrans %}
            </a>
            <button type="submit" class="btn btn-primary">{% trans %}User.add.submit{% endtrans %}</button>
        </div>
    {{ form_end(form) }}
{% endblock %}
