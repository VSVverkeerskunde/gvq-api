{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/quiz.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="text-center">
    {% if language == 'nl' %}
        {% if channel == 'league' %}
            <p>De Grote Verkeersleague loopt van 15 oktober tot en met 15 november 2020.</p>
        {% else %}
            <p>De Grote Verkeersquiz loopt van 15 oktober tot en met 15 november 2020.</p>
        {% endif %}
    {% else %}
        <p>Le Grand Quiz de la Route commence le 15 octobre et se termine le 15 novembre 2020.</p>
    {% endif %}
    </div>
{% endblock %}
